#!/bin/bash
###########
# 恢復 chmod 全縣
# /lib64/ld-linux-x86-64.so.2  /bin/chmod +x /bin/chmod
###########
# cd /lib64
# ./ld-linux-x86-64.so.2  /bin/chmod +x /bin/chmod

# 查看CentOS的版本號：
# cat /etc/centos-release


### 設定網卡IP
# nmtui
### 前置 專案
# yum -y install git
# git clone http://github.com/moon-start/SH.git



# ${@##*/}

if [ "$#" = "0" ]
then
    #echo "len( )=0"
    sh ok `pwd`
else
    #echo "$@"
    #echo "var is 456"
    ### 清空
    sh `pwd`/bin/BinDel
    ### 自己
    rm -rf /usr/bin/ok
    chmod +x `pwd`/ok
    ln `pwd`/ok  /usr/bin
    echo ""
    echo  SH目錄位置: `pwd`
    ##
    ##
    ##########  git clone https://github.com/moon-start/SH.git
    chmod +x `pwd`/bin/*
    ln `pwd`/bin/*      /usr/bin
    echo  ln 完成!!
    echo ""
    ########## SH
    chmod +x `pwd`/binSH/*
    ln `pwd`/binSH/*  /usr/bin
    echo ""
    ########## SHH
    chmod +x `pwd`/binSHH/*
    ln `pwd`/binSHH/*  /usr/bin
    echo ""
    ########## SQL
    chmod +x `pwd`/binSQL/*
    # ln `pwd`/binSQL/*  /usr/bin
    cp `pwd`/binSQL/*  /usr/bin
    echo ""
fi





